@model HackathonWebApp.Models.ScoreQuestion

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Score Question";
}
<style>
    .answer-points {
        display: inline-block;
    }
    .answer-option {
        display: inline-block;
        width: 85%;
        margin: 5px 0 0 0;
    }
</style>
<div class="container text-white">
    <h1>Create Score Question</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="CreateScoreQuestion" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Group" class="control-label"></label>
                    <input asp-for="Group" class="form-control" />
                    <span asp-validation-for="Group" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PossiblePoints" class="control-label"></label>
                    <input asp-for="PossiblePoints" class="form-control" />
                    <span asp-validation-for="PossiblePoints" class="text-danger"></span>
                </div>

                <div class="form-group">
                    Answer Options<br/>
                    <div id="pts0" class="answer-points"></div><input type="hidden" name="AnswerOptions[0].Score" value="0"/>
                    <input name="AnswerOptions[0].Description" class="form-control answer-option"/><br/>

                    <div id="pts1" class="answer-points"></div><input type="hidden" name="AnswerOptions[1].Score" value="1"/>
                    <input name="AnswerOptions[1].Description" class="form-control answer-option"/><br/>

                    <div id="pts2" class="answer-points"></div><input type="hidden" name="AnswerOptions[2].Score" value="2"/>
                    <input name="AnswerOptions[2].Description" class="form-control answer-option"/><br/>

                    <div id="pts3" class="answer-points"></div><input type="hidden" name="AnswerOptions[3].Score" value="3"/>
                    <input name="AnswerOptions[3].Description" class="form-control answer-option"/><br/>

                    <div id="pts4" class="answer-points"></div><input type="hidden" name="AnswerOptions[4].Score" value="4"/>
                    <input name="AnswerOptions[4].Description" class="form-control answer-option"/><br/>

                    <div id="pts5" class="answer-points"></div><input type="hidden" name="AnswerOptions[5].Score" value="5"/>
                    <input name="AnswerOptions[5].Description" class="form-control answer-option"/><br/>
                    Note: Blanks are ignored.<br/>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ScoreQuestions">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $( document ).ready(function() {
        $("#PossiblePoints").change(function() {
            var possiblePoints = $(this).val();
            $("#pts0").html(0+"pts");
            $("#pts1").html(Math.round(1.0/5.0*possiblePoints)+"pts");
            $("#pts2").html(Math.round(2.0/5.0*possiblePoints)+"pts");
            $("#pts3").html(Math.round(3.0/5.0*possiblePoints)+"pts");
            $("#pts4").html(Math.round(4.0/5.0*possiblePoints)+"pts");
            $("#pts5").html(Math.round(5.0/5.0*possiblePoints)+"pts");
        })
    });
</script>
}
