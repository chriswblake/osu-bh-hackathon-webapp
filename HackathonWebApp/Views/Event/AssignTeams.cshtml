				charts[chartId] = myChart;
			});
            $(".experience-barchart-combined").each(function() {
				let chartId = $(this).attr('id');
				const ctx = document.getElementById(chartId).getContext('2d');
				const myChart = new Chart(ctx, {
					type: 'bar',
					data: {
                        labels: [
                            'Hackathon',
                            'Coding',
                            'Communications',
                            'Organization',
                            'Documentation',
                            'Business',
                            'Creativity'
                        ],
						datasets: [
                            {
                                label: 'Group 1',
