@{
    ViewData["Title"] = "Create Account";
}

@model User

<div class="container text-white">
    <h1 class="text-white">Create User</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
 
    <div class="row">
        <div class="col-md-4">
            @if (ViewBag.Message != null)
            {
                <div class="p-1 mb-2 bg-success text-white">@ViewBag.Message</div>
            }
            <form method="post">
                <div class="form-group">
                    Username
                    <input asp-for="Name" class="form-control" placeholder="Choose a username"/>
                </div>
                <div class="form-group">
                    Email
                    <input asp-for="Email" class="form-control" placeholder="someone@example.com"/>
                </div>
                <div class="form-group">
                    Password
                    <input asp-for="Password" type="password" class="form-control" placeholder="Choose a password"/>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>