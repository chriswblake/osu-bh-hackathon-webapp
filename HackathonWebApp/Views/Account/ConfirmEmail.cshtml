@{
    ViewBag.Title = "Confirm Email";
    string emailConfirmed = ViewBag.EmailConfirmed;
}

<div class="container text-white">

    <h2>@ViewBag.Title</h2>

    @switch (emailConfirmed)
    {
        case "already":
            <p>
            You have already confirmed your email.<br/>
            Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </p>
            break;

        case "yes":
            <p>
            Thank you for confirming your email.<br/>
            Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </p>
            break;

        default:
            <p>
            <span style="color:red;">Invalid or expired confirmation code</span><br/>
            Please check your email for a confirmation link.
            <br/>
            If the confirmation link has expired, you can <a href="/Account/ConfirmAccount">request another confirmation email</a> at the login page.
            </p>
            break;
    }
</div>