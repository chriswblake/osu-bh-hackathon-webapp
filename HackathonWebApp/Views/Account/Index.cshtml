@model ApplicationUser
@{
    ViewData["Title"] = "Account";
    var user = Model;
    EventApplication eventApplication = ViewBag.EventApplication;
    List<AwardCertificate> awardCertificates = ViewBag.AwardCertificates;
}

<style>
    .application-status-card {
        background-color: var(--bh-dark-green-gray);
        border: 1px solid var(--bh-green);
        border-radius: 5px;
        padding: 10px;
    }
    .danger-zone {
        background-color: var(--bh-dark-green-gray);
        border: 1px solid rgba(248,81,73,0.4);
        border-radius: 5px;
        padding: 10px;
    }
    .danger-zone div {
        display: inline-block;
    }
    .award-certificate {
        margin: 5px 0;
    }
</style>

<div class="container text-white">

    @* User Settings *@
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 col-xl-4">
        <h3>Profile</h3>
        <form asp-action="Update" asp-controller='Account'>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                First Name
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                Last Name
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                UserName
                <div>@user.UserName</div>
            </div>
            <div class="form-group">
                Email
                <div>@user.Email</div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    @* Application State *@
    @if (eventApplication != null)
    {
    <h3>Event Application</h3>
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 col-xl-4 application-status-card">
        <div>
            <b>Applied</b>
            <div>@eventApplication.CreatedOn.ToString("MMM dd, yyyy - h:MM tt")</div>
        </div>
        <div >
            <b>Status</b>
            @switch (eventApplication.ConfirmationState)
            {
            case EventApplication.ConfirmationStateOption.unconfirmed:
                <div>Application Received. Waiting on registration to close.</div>
                break;
            case EventApplication.ConfirmationStateOption.request_sent:
                <div>Email Sent. Pending confirmation of availability from applicant. Please select below.</div>
                break;
            case EventApplication.ConfirmationStateOption.unassigned:
                <div>Availability confirmed. Waiting on tentative team placement. Please use form below if you need to cancel.</div>
                break;
            case EventApplication.ConfirmationStateOption.assigned:
                <div>Team tentatively assigned.</div>
                break;
            case EventApplication.ConfirmationStateOption.cancelled:
                <div>User has withdrawn application. Please use form below to re-enroll.</div>
                break;
            default:
                <div>Unknown. Please contact even organizor.</div>
                break;
            }
        </div>
        @{
            // Determine if the selector for changing available should be shown.
            bool canSelfConfirm = (
                eventApplication.ConfirmationState == EventApplication.ConfirmationStateOption.request_sent ||
                eventApplication.ConfirmationState == EventApplication.ConfirmationStateOption.unassigned ||
                eventApplication.ConfirmationState == EventApplication.ConfirmationStateOption.cancelled
            );
        }
        @if (canSelfConfirm)
        {
            // Pre select selector based on current status
            string selectedAvailable = "";
            string selectedUnavailable = "";
            if (eventApplication.ConfirmationState == EventApplication.ConfirmationStateOption.unassigned)
                selectedAvailable = "selected";
            else if (eventApplication.ConfirmationState == EventApplication.ConfirmationStateOption.cancelled)
                selectedUnavailable = "selected";

            <div>
                <form asp-action="ApplicationStatus" asp-controller="Account" method="post" style="margin-top: 5px;">
                    <select name="available" id="available">
                        <option value="false" style='display:none' disabled selected>-- Please confirm availability --</option>
                        @Html.Raw($"<option value='true' {selectedAvailable}>I'm still available! 🤓</option>")
                        @Html.Raw($"<option value='false' {selectedUnavailable}>I can't attend anymore. 😢</option>")
                    </select><br/>
                    <button type="submit" class="btn btn-primary" style="margin-top: 5px;">Save</button>
                </form>
            </div>
        }
    </div>
    <br/>
    }

    @* Award Certificates *@
    <h3>Award  Certificates</h3>
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 col-xl-4 application-status-card">
        @if (awardCertificates != null && awardCertificates.Count() > 0)
        {
            foreach(AwardCertificate awardCertificate in awardCertificates)
            {
                <div class="award-certificate">
                    <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Certificate" asp-route-id="@awardCertificate.Id" target="_blank">View</a>
                    @awardCertificate.EventName - @awardCertificate.Award
                </div>
            }
        }else {
            <div>There are no awards yet!</div>
        }
    </div>
    <br/>

    @* Account Delete *@
    <h3>Danger Zone</h3>
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 col-xl-4 danger-zone">
        <b>Delete Account</b><br/>
        This will permantently delete your account and all associated data. No going back!
        <form asp-action="Delete" method="post" style="margin-top: 10px;">
            <button type="submit" class="btn btn-danger">Delete My Account</button>
        </form>
    </div>
</div>